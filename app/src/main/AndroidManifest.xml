<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstApplication"
        tools:targetApi="31">

        <activity
            android:name=".page.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".page.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".page.NoteDetailActivity"
            android:exported="true" />
        <activity android:name=".page.NewNote"
            android:exported="true"/>
        <activity
            android:name=".page.Message"
            android:exported="false" />
        <activity
            android:name=".page.PersonalCenter"
            android:exported="false" />
        <activity
            android:name=".page.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>